---
import Star from "@/components/svg/Star.astro";
import { Image } from "astro:assets";

interface Props {
  imageSrc: ImageMetadata;
  alt: string;
}

const {imageSrc, alt} = Astro.props
---

<div
  class="flex flex-col justify-between gap-x-24 gap-y-1 lg:flex-row lg:gap-y-4"
>
  <div
    class="flex flex-col shrink-0 gap-x-10 gap-y-3 lg:max-w-lg lg:flex-row lg:items-center lg:gap-y-4"
  >
    <Image
      class="h-16 w-full rounded-2xl lg:h-24 object-cover lg:w-64 lg:rounded-full"
      src={imageSrc}
      width={256}
      height={96}
      alt={alt}
    />
    <h3 class="text-2xl font-medium lg:text-3xl">Development</h3>
  </div>
  <div class="flex items-center gap-x-16 lg:max-w-lg">
    <p>
      Lorem ipsum dolor sit amet consectetur, adipisicing elit. Rem numquam
      libero assumenda.
    </p>
    <Star class="hidden h-16 w-16 lg:block" />
  </div>
</div>
