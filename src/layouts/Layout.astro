---
import "@fontsource/poppins/latin-300.css";
import "@fontsource/poppins/latin-ext-300.css";
import "@fontsource/poppins/latin-400.css";
import "@fontsource/poppins/latin-ext-400.css";
import "@fontsource/poppins/latin-500.css";
import "@fontsource/poppins/latin-ext-500.css";
import "@fontsource/poppins/latin-600.css";
import "@fontsource/poppins/latin-ext-600.css";
import "@fontsource/poppins/latin-900.css";
import "@fontsource/poppins/latin-ext-900.css";
import Footer from "@/components/Footer";
import Navigation from "@/components/Navigation/Navigation.astro";

interface Props {
  title?: string;
  class?: string;
}

const { title, class: className } = Astro.props;

const SITE_NAME = "Revised";
---

<!doctype html>
<html lang="pl">
  <head>
    <!-- High Priority Global Metadata -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title === SITE_NAME ? title : `${title} | ${SITE_NAME}`}</title>
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#D05A3A" />
    <!-- Font preloads -->
    <link
      rel="preload"
      href="/fonts/Rowdies/rowdies-latin-400-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Rowdies/rowdies-latin-ext-400-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <!-- Low Priority Global Metadata -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="mask-icon" href="/favicon.svg" color="#D05A3A" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <!-- Page Metadata -->
    <link rel="canonical" href="https://revised.pl/" />
    <meta
      name="description"
      content="W Revised tworzyny szybkie i innowacyjne strony internetowe. Chcemy, aby każdy miał dostęp do najnowszych i przełomowych technologii."
    />
  </head>
  <body class="bg-neutral-100 font-sans text-primary">
    <Navigation />
    <main class={className}>
      <slot />
    </main>
    <Footer client:visible={{ rootMargin: "400px" }} />
  </body>
</html>

<style>
  @font-face {
    font-family: "Rowdies";
    src: url("/fonts/Rowdies/rowdies-latin-300-normal.woff2") format("woff2");
    font-weight: 300;
    font-display: swap;
  }
  @font-face {
    font-family: "Rowdies";
    src: url("/fonts/Rowdies/rowdies-latin-ext-300-normal.woff2")
      format("woff2");
    font-weight: 300;
    font-display: swap;
  }
  @font-face {
    font-family: "Rowdies";
    src: url("/fonts/Rowdies/rowdies-latin-400-normal.woff2") format("woff2");
    font-weight: 400;
    font-display: swap;
  }
  @font-face {
    font-family: "Rowdies";
    src: url("/fonts/Rowdies/rowdies-latin-ext-400-normal.woff2")
      format("woff2");
    font-weight: 400;
    font-display: swap;
  }
</style>
